<p id="notice"><%= notice %></p>

<div class="section">
  <div class="container">
    <h1 class="title">Customers</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.address %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, customer %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_customer_path(customer) %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, customer, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Customer', new_customer_path %>
  </div>
</div>