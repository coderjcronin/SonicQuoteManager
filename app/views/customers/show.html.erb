<p id="notice"><%= notice %></p>

<%
  siteList = Site.where(customer_id: @customer.id)
%>

<div class="section">
  <div class="container">
    <div class="box">
      <h2 class="title">Customer</h2>
      <div class="content">
        <p>
          <strong>Name:</strong>
          <%= @customer.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @customer.address %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @customer.phone %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @customer.email %>
        </p>
      </div>
    </div>

    <nav class="panel">
      <p class="panel-heading">Sites - <%= siteList.count %></p>
      <div class="panel-block">
        <% siteList.each do |s| %>
        <%= link_to site_path(s.id), :class => 'panel-block' do %>
        <span class="panel-icon">
          <icon class="fas fa-home" aria-hidden="true"></icon>
        </span>
        <%= s.name %>
        <% end %>
        <% end %>
      </div>
    </nav>
    
    <%= link_to 'Edit', edit_customer_path(@customer) %> |
    <%= link_to 'Back', customers_path %>
  </div>
</div>