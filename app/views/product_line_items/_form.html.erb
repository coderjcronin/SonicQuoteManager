
<%= simple_form_for(@product_line_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :quote_id %>
    <%= f.input :part_id %>
    <%= f.input :labor_units %>
    <%= f.input :unit_price %>
    <%= f.input :full_service_price %>
    <%= f.input :quanity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
