<p id="notice"><%= notice %></p>

<h1>Product Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Part</th>
      <th>Labor units</th>
      <th>Unit price</th>
      <th>Full service price</th>
      <th>Quanity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_line_items.each do |product_line_item| %>
      <tr>
        <td><%= product_line_item.quote_id %></td>
        <td><%= product_line_item.part_id %></td>
        <td><%= product_line_item.labor_units %></td>
        <td><%= product_line_item.unit_price %></td>
        <td><%= product_line_item.full_service_price %></td>
        <td><%= product_line_item.quanity %></td>
        <td><%= link_to 'Show', product_line_item %></td>
        <td><%= link_to 'Edit', edit_product_line_item_path(product_line_item) %></td>
        <td><%= link_to 'Destroy', product_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

