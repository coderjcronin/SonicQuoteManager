<div class="section">
  <div class="container">
    <h1 class="title">Parts</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @parts.each do |part| %>
          <tr>
            <td><%= part.name %></td>
            <td nowrap><%= part.sku %></td>
            <td><%= part.description %></td>
            <td><%= part.price %></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, part %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_part_path(part) %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, part, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Part', new_part_path %>
  </div>
</div>