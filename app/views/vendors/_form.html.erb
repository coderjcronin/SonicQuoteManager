
<%= simple_form_for(@vendor) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <p class="control">
          <%= f.input :name, input_html: { class: "input"}, wrapper: false, label: 'Vendor Name', label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.input :poc, input_html: { class: "input"}, wrapper: false, label: 'Vendor Point of Contact', label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.input :phone, input_html: { class: "input"}, wrapper: false, label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.input :url, input_html: { class: "input"}, wrapper: false, label: 'Vendor Website', label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.input :description, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label is-normal"}, label: 'Vendor Description' %>
    </p>
  </div>

  <div class="form-actions field is-grouped is-grouped-centered">
    <%= button_tag type: 'submit', class: "button is-success" do %>
      <span class="icon is-small">
        <i class="fas fa-check"></i>
      </span>
      <span>Save</span>
    <% end %>
  </div>
<% end %>
