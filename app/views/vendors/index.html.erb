<div class="section">
  <div class="container">
    <h1 class="title">Vendors</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rep</th>
          <th>Phone</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @vendors.each do |vendor| %>
          <tr>
            <td nowrap><%= vendor.name %></td>
            <td nowrap><%= vendor.poc %></td>
            <td><%= vendor.phone %></td>
            <td><%= vendor.description %></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, vendor %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_vendor_path(vendor) %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, vendor, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="has-text-centered">
      <%= link_to 'New Vendor', new_vendor_path, class:"button is-primary" %>
    </div>

  </div>
</div>
