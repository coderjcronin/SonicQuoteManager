<div class="section">
  <div class="container">
    <h2 class="title">Site</h2>
    <div class="content">
      <p>
        <strong>Name:</strong>
        <%= @site.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @site.address %>
      </p>

      <p>
        <strong>Phone:</strong>
        <%= @site.phone %>
      </p>

      <p>
        <strong>Sitepoc:</strong>
        <%= @site.sitepoc %>
      </p>

      <p>
        <strong>Sitepocphone:</strong>
        <%= @site.sitepocphone %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @site.notes %>
      </p>
    </div>
    <h3 class="subtitle">Customer</h3>
    <div class="box">
      <div class="content">
        <strong><%= @site.customer.name %></strong><br />
        <%= @site.customer.address %><br />
        <%= @site.customer.phone %>
      </div>
    </div>
    </p>

    <%= link_to 'Edit', edit_site_path(@site) %> |
    <%= link_to 'Back', sites_path %>
  </div>
</div>