<div class="section">
  <div class="container">
    <h1 class="title">Sites</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>POC</th>
            <th>Phone</th>
            <th>Notes</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sites.each do |site| %>
            <tr>
              <td><%= site.name %></td>
              <td><%= site.address %></td>
              <td><%= site.phone %></td>
              <td><%= site.sitepoc %></td>
              <td><%= site.sitepocphone %></td>
              <td><%= site.notes %></td>
              <td><span class="icon"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, site %></span></td>
              <td><span class="icon"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_site_path(site) %></span></td>
              <td><span class="icon"><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, site, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>

<br>

<%= link_to 'New Site', new_site_path %>
    
  </div>
</div>