
<%= simple_form_for(@setting) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <p class="control">
      <%= f.input :optionName, wrapper: false, input_html: { class: "input" }, label: 'Setting Name', label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.input :value, wrapper: false, input_html: { class: "input" }, label: 'Value', label_html: { class: "label is-normal"} %>
    </p>
  </div>

  <div class="form-actions field is-grouped is-grouped-centered">
    <%= button_tag type: 'submit', class: "button is-success" do %>
      <span class="icon is-small">
        <i class="fas fa-check"></i>
      </span>
      <span>Save</span>
    <% end %>
  </div>
<% end %>
