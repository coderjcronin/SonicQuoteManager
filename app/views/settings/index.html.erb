<div class="section">
  <div class="container">
    <h1 class="title">Settings</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Setting Name</th>
          <th>Value</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <td><%= setting.optionName %></td>
            <td><%= setting.value %></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-eye"></i>'.html_safe, setting %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_setting_path(setting) %></span></td>
            <td><span class="icon"><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, setting, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="has-text-centered">
      <%= link_to 'New Setting', new_setting_path, class: "button is-primary" %>
    </div>

  </div>
</div>
