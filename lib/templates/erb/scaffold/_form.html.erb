<%# frozen_string_literal: true %>
<%%= simple_form_for(@<%= singular_table_name %>) do |f| %>
  <%%= f.error_notification %>
  <%%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <%- attributes.each do |attribute| -%>
  <div class="field">
    <p class="control">
    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, wrapper: false, label_html: { class: "label is-normal"} %>
    </p>
  </div>
  <%- end -%>

  <div class="form-actions field is-grouped is-grouped-centered">
    <%%= button_tag type: 'submit', class: "button is-success" do %>
      <span class="icon is-small">
        <i class="fas fa-check"></i>
      </span>
      <span>Save</span>
    <%% end %>
  </div>
<%% end %>
